<launch>
 
  <!-- Load joint controller configurations from YAML file to parameter server -->
  #joint controller定義をパラメータに登録する
  <rosparam file="$(find my_robo_control)/config/controller.yaml" command="load"/>
 
  <!-- load the controllers -->
  #コントローラを読み込む
  <node name="controller_spawner" pkg="controller_manager"
        type="spawner" ns="my_robo" output="screen"
        args="joint_state_controller diff_drive_controller"/>
 
  <!-- convert joint states to TF transforms for rviz, etc -->
  #rvizやその他のためにjoint statesをTF transformsに変換する。
  <node name="robot_state_publisher" pkg="robot_state_publisher"
        type="robot_state_publisher" respawn="false" output="screen" ns="/my_robo">
  </node>
 
</launch>
