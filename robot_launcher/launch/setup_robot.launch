<launch>
	<node pkg="urg_node" type="urg_node" name="urg_node" output="screen">
		<param name="serial_port" value="/dev/LRF"/>
    </node>
    
    <!-- launch ypspur_ros -->
    <!-- TODO: load shell script for launch ypspur-coodinator and launch ypspur_ros -->
    <node pkg="ypspur_ros" type="ypspur_ros" name="ypspur_ros" 
    args="-p $(find robot_launcher)/ypspur_params/yp-h28ki.param" output="screen" />

    <!-- You can adjust the pose of laser-rangefinder here. Order of values: x y z yaw pitch roll. -->
  	<node pkg="tf" type="static_transform_publisher" name="laser_transform" args="$(optenv laserpos 0.2 0 0 0 0 0) base_link laser 100" />
</launch>
